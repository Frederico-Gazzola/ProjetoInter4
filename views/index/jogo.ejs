<h1>
	Should I Play?
</h1>

<h2>
	<%= leituras[0].titulo %>
</h2>

<div class="container-fluid mb-5">
	<div class="row">

		<div class="col-md-8">
			<canvas id="grafico"></canvas>
		</div>

		<div class="col-md-4">
			<div>
				<img src="/public/img/<%= leituras[0].id_jogo %>.jpg" />
			</div>

			<p>
				Pre√ßo: <%= leituras[0].preco %>
			</p>

			<p>
				Review: <%= leituras[0].review %>
			</p>
		</div>

	</div>
</div>

<script type="text/javascript" src="/public/lib/chart.js/chart.umd.js"></script>
<script type="text/javascript">
	let leituras = <%- JSON.stringify(leituras) %>;

	new Chart(
    document.getElementById('grafico'),
    {
      type: 'line',
      data: {
        labels: leituras.map(row => row.data),
        datasets: [
          {
            label: 'Acessos',
            data: leituras.map(row => row.acessos)
          }
        ]
      },
		options: {
			responsive: true,
		}
    }
  );
</script>